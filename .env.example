# Application Settings
APP_NAME=Service Order Management System
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=True

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security Settings
ALLOWED_ORIGINS=["*"]
RATE_LIMIT_PER_MINUTE=100
# IMPORTANT: Generate a secure random key for production
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-BEFORE-DEPLOYMENT

# Logging
LOG_LEVEL=INFO

# AWS Configuration (Optional - for deployment)
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
